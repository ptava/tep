refinement
{
    r1
    {
        min_x   -0.9;
        max_x   1.4;
        min_y   -0.9;
        max_y   1.4;
        min_z   0.0;
        max_z   0.9;
    }

    r2
    {
        min_x   -0.9;
        max_x   0.9;
        min_y   -0.9;
        max_y   0.9;
        min_z   0.0;
        max_z   0.75;
    }

    r3
    {
        min_x   -0.2;
        max_x   0.2;
        min_y   -0.2;
        max_y   0.2;
        min_z   0.0;
        max_z   0.6;
    }
}


background
{
    // Length of cubic cells in "uniform" region [m]
    cells_scaling 4.0;

    // Domain limit
    min_x         120;
    max_x         420;
    min_y         -620;
    max_y         -320;
    min_z         40;
    max_z         80;

    // Lengths
    length_x      #calc " ${max_x} - ${min_x} ";
    length_y      #calc " ${max_y} - ${min_y} ";
    length_z      #calc " ${max_z} - ${min_z} ";

    // Number of cells in each direction
    cells_x       #calc " int(${length_x} / ${cells_scaling}) ";
    cells_y       #calc " int(${length_y} / ${cells_scaling}) ";
    cells_z       #calc " int(${length_z} / ${cells_scaling}) ";
}
